pipeline {
    agent any
    tools{
        terraform 'terraform-11'
    }
    
    stages{
        stage('Git Checkout ')
        steps{
            git branch: 'main', url: 'https://github.com/DEVPRO1234/terraformpipelineAWS'
            
            
        }
        
    }
        
    stages{
        stage('Terraform Init')
        
        steps{
            
            sh 'terraform init'
            
        }
    } 
      stages{
        stage('Terraform Apply')
        
        steps{
            
             sh 'terraform apply --auto-approve'
            
        }
    } 
    
    
    
    
    
    
}
